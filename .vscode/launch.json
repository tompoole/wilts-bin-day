    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Typescript",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/index.ts",
            "outFiles": [
                "${workspaceRoot}/build/**/*.js"
            ],
            "preLaunchTask": "build"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceRoot}/build/test/test-*.js"
            ],
            "preLaunchTask": "build",
            "outFiles": [
                "${workspaceRoot}/build/**/*.js"
            ]
        }
    ]
}